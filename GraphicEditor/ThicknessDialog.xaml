<Window x:Class="GraphicEditor.ThicknessDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphicEditor"
        mc:Ignorable="d"
        Title="Выберите толщину линии" Height="150" Width="210" WindowStartupLocation="CenterOwner" Icon="/icon.ico" MinWidth="210" MinHeight="150" MaxWidth="210" MaxHeight="150" ResizeMode="NoResize">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Толщина линии:"/>
            <TextBox x:Name="ThicknessTextBox" Width="100"/>
            <Button Content="OK" Click="OK_Click" Width="100" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
